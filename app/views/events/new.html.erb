<h1>Create Event</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<%= bootstrap_form_for(@event) do |f| %>
	  <%= f.text_field :title %>
	  <%= f.text_field :location %>
	  <%= f.text_area :description %>
	  <%= f.date_field :data %>
	  <%= f.submit "Create Event",  class: "btn btn-primary"  %>
	<% end %>
	<br>
  </div>
</div>